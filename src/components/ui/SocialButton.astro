---
import Arrow from "../icons/Arrow.astro";

const { href } = Astro.props;
---

<a
  href={href}
  class="flex items-center bg-black/10 text-black/60 hover:bg-black/20 dark:bg-white/10 dark:hover:bg-white/20 dark:text-white/60 gap-2 w-fit rounded-full px-2.5 py-1 hover:-translate-y-0.5 transition-all text-sm"
>
  <slot />
  <Arrow class="size-4" />
</a>
