---
import Avatar from "../../assets/avatar.webp";

import { Pill, PillIndicator } from "../ui/Pill";

import MailIcon from "../icons/Mail.astro";
import GithubIcon from "../icons/Github.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";

const links = [
  {
    href: "mailto:francogalfre.work@gmail.com",
    label: "Contactar por email a Franco Galfré",
    icon: MailIcon,
  },
  {
    href: "https://www.linkedin.com/in/francogalfre/",
    label: "Ver perfil de LinkedIn de Franco Galfré",
    icon: LinkedInIcon,
  },
  {
    href: "https://github.com/francogalfre",
    label: "Ver repositorios de GitHub de Franco Galfré",
    icon: GithubIcon,
  },
];
---

<div class="space-y-8">
  <header class="space-y-6 mb-10">
    <div class="flex items-center gap-4">
      <img
        alt="Avatar of Franco Galfré - Full Stack Web Developer"
        fetchpriority="high"
        src={Avatar.src}
        class="size-15 rounded-full brightness-95 hover:rotate-5 hover:brightness-105 hover:scale-105 transition-all duration-300"
        loading="eager"
      />
      <div class="space-y-1">
        <h1 class="text-xl font-medium tracking-tight">Franco Galfré</h1>
        <h2 class="text-md text-black/50 dark:text-white/60 tracking-tight">
          Full Stack Developer
        </h2>
      </div>
    </div>

    <div class="flex items-center gap-4">
      <Pill
        className="border-black/20 dark:border-white/20 text-black/80 dark:text-white/80"
      >
        <PillIndicator variant="success" pulse />
        <span>Open to work</span>
      </Pill>
      <nav aria-label="Enlaces de contacto y redes sociales" class="flex gap-4">
        {
          links.map(({ href, label, icon: Icon }) => (
            <a
              href={href}
              aria-label={label}
              target="_blank"
              rel="noopener noreferrer"
              class="hover:scale-105 transition-transform text-black/60 dark:text-white/60"
            >
              <Icon />
            </a>
          ))
        }
      </nav>
    </div>
  </header>

  <p
    class="text-pretty text-black/50 dark:text-white/50 text-md leading-6 prose"
  >
    <span class="highlight">Software Engineering</span> student crafting modern web
    experiences with <span class="highlight">Next.js</span>, <span
      class="highlight">React</span
    >, and <span class="highlight">Typescript</span>. I've helped <span
      class="highlight">25+</span
    >
    clients worldwide bring their digital visions to life through clean code and
    thoughtful design.
  </p>

  <div>
    <a
      href="/CV.pdf"
      download="CV_Galfre Franco"
      class="bg-white/20 border-black/20 hover:bg-gray-200 text-black/80 dark:bg-black/20 border-1 dark:border-white/20 dark:text-white/80 px-6 py-3 rounded-xl dark:hover:bg-white/5 transition-colors"
      >Download CV</a
    >
  </div>
</div>
